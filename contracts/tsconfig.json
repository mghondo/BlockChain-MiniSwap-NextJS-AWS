{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": ["./scripts", "./test", "./typechain-types", "./hardhat.config.ts"],
  "exclude": ["node_modules", "dist"],
  "files": ["./hardhat.config.ts"]
}