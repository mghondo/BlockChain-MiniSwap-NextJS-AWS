FROM node:18-alpine

WORKDIR /app

# Install Python and build dependencies (required for some node modules)
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy contract files
COPY . .

# Compile contracts
RUN npm run compile

# Expose Hardhat node port
EXPOSE 8545

# Start Hardhat node
CMD ["npm", "run", "node"]